index.html
<!DOCTYPE html>
<html>
<head>
  <title>Material Balancing</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    input { margin: 5px; }
    table { border-collapse: collapse; margin-top: 20px; }
    td, th { border: 1px solid black; padding: 8px; }
  </style>
</head>
<body>

<h2>Raw Material Stock Balance</h2>

<input id="material" placeholder="Material Name">
<input id="inward" type="number" placeholder="Inward">
<input id="outward" type="number" placeholder="Outward">
<button onclick="addEntry()">Add</button>

<table>
  <tr>
    <th>Material</th>
    <th>Inward</th>
    <th>Outward</th>
    <th>Balance</th>
  </tr>
  <tbody id="tableBody"></tbody>
</table>

<script>
function addEntry() {
  let m = material.value;
  let i = Number(inward.value);
  let o = Number(outward.value);
  let b = i - o;

  tableBody.innerHTML += `
    <tr>
      <td>${m}</td>
      <td>${i}</td>
      <td>${o}</td>
      <td>${b}</td>
    </tr>
  `;
}
</script>

</body>
</html>
